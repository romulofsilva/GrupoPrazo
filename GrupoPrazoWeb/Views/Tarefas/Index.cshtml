@model IEnumerable<GrupoPrazo_Infra.Entidades.Tarefa>

@{
    ViewBag.Title = "Lista de Tarefas";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Nova Tarefa", "Create", null, new { @class = "btn btn-primary btn-xs" })
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th> Ações </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayTextFor(modelItem => item.Descricao)
                
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.Estado,
                  new Dictionary<string, object>{
                     {"id", "chk1"},
                     {"onclick","setCompleteStatus.call(this)"}})

            </td>
            <td class="actions">
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-xs" })
                @Html.ActionLink("Visualizar", "Details", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>

<script type="text/javascript">
    function setCompleteStatus() {
        var elementRef = document.getElementById("chk1");
        if (elementRef.checked) {
            elementRef.className = "text-success";
        }
        else {
            elementRef.className = "";
        }

    }

</script>


