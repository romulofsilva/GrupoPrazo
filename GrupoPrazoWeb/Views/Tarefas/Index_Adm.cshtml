@model IEnumerable<GrupoPrazo_Infra.Entidades.Tarefa>

@{
    ViewBag.Title = "Tarefas";
}

<h2>@ViewBag.Title</h2>


<div class="container">
    <div class="row">
        <div class="col-lg-2">
            <nav class="navbar navbar-default sidebar" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-sidebar-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-sidebar-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="@Url.Action("Login", "Login")">Home<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-home"></span></a></li>
                            <li><a href="@Url.Action("Index", "Usuario")">Usuários <span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-user"></span></a></li>
                            <li class="active"><a href="#" )">Tarefas<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-th-list"></span></a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-lg-1"></div>

        <div class="col-lg-8">
            <p>
                @Html.ActionLink("Nova Tarefa", "Create", null, new { @class = "btn btn-primary btn-xs" })
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayTextFor(modelItem => item.Descricao)

                        </td>
                        <td>
                            @Html.CheckBoxFor(modelItem => item.Estado,
                                new Dictionary<string, object>{
                                {"id", "chk1"},
                                {"onclick","setCompleteStatus.call(this)"}})

                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-xs" })
                            @Html.ActionLink("Visualizar", "Details", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                            @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    function setCompleteStatus() {
        var elementRef = document.getElementById("chk1");
        if (elementRef.checked) {
            elementRef.className = "text-success";
        }
        else {
            elementRef.className = "";
        }

    }

</script>



